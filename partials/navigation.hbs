<a href="#" data-activates="mobile-nav" class="button-collapse"><i class="fa fa-navicon"></i></a>
<ul class="right">
    {{#if @blog.navigation}}
        {{#foreach navigation}}
        <li class="hide-on-med-and-down">
            <a href="{{url absolute="true"}}" class="waves-effect waves-light">{{label}}</a>
        </li>
        {{/foreach}}
    {{else}}
        <li class="hide-on-med-and-down">
            <a href="{{@blog.url}}" class="waves-effect waves-light">首 页</a>
        </li>
    {{/if}}
    <li>
        <a href="#!" id="toggle-search" class="waves-effect waves-light">
            <i id="searchIcon" class="mdi-action-search"></i>
        </a>
    </li>
</ul>
<div class="side-nav" id="mobile-nav">
    <div class="mobile-head bf-color">
        {{#if @blog.logo}}
        <img src="{{@blog.logo}}" class="logo-img circle responsive-img">
        {{else}}
        <img src="{{asset "images/head_pic.jpg"}}" class="logo-img circle responsive-img">
        {{/if}}
        <div class="logo-name">{{@blog.title}}</div>
        <div class="logo-desc">从来没有真正的绝境，只有心灵的迷途</div>
    </div>
    <ul class="menu-list">
        {{#if @blog.navigation}}
            {{#foreach navigation}}
            <li>
                <a href="{{url absolute="true"}}" class="waves-effect waves-light">
                    <i class="fa fa-link fa-lg fa-fw"></i>{{label}}
                </a>
            </li>
            {{/foreach}}
        {{else}}
            <li>
                <a href="{{@blog.url}}" class="waves-effect waves-light">
                    <i class="fa fa-home fa-lg fa-fw"></i>首 页
                </a>
            </li>
        {{/if}}
        <hr>
        <li>
            <a href="settings.html" class="waves-effect waves-light">
                <i class="fa fa-gear fa-lg fa-fw"></i>设 置
            </a>
        </li>
    </ul>
    <div class="social-link">
        <a href="https://github.com/blinkfox" class="tooltipped" target="_blank" data-tooltip="访问我的GitHub" data-position="top" data-delay="50">
            <i class="fa fa-github fa-lg"></i>
        </a>
        <a href="mailto:chenjiayin1990@163.com" class="tooltipped" target="_blank" data-tooltip="邮件联系我" data-position="top" data-delay="50">
            <i class="fa fa-envelope fa-lg"></i>
        </a>
        <a href="#!" class="tooltipped" data-tooltip="QQ号：1181062873" data-position="top" data-delay="50">
            <i class="fa fa-qq fa-lg"></i>
        </a>
        <a href="{{@blog.url}}/rss/" class="tooltipped" data-tooltip="RSS" target="_blank" data-position="top" data-delay="50">
            <i class="fa fa-rss fa-lg"></i>
        </a>
    </div>
</div>
